{
  "name": "EzKeZe",
  "description": "Making Secure Communcation Ez Pz",
  "version": "0.1",
  "permissions": [
    "activeTab",
    "http://*/*",
    "webNavigation"
  ],
  "content_scripts": {
      "matches": ["http://*/*", "https://*/*", "<all_urls>"],
      "all_frames": true,
      "match_about_blank": true 
  },
  "background": {
    "scripts": ["src/background/background.js", "/lib/jquery-1.12.2.min.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "EncryptoMatic!!",
    "default_popup": "src/popup/popup.html"
  },
  "commands": {
      "encrypt": {
          "description": "encrypt the currently selected text"
      }
  },
  "manifest_version": 2
}
